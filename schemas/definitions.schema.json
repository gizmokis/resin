{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/gizmokis/resin/schemas/definitions.schema.json",
  "title": "Definitions for Resin JSON schemas",
  "description": "Common definitions for Resin JSON schemas used by prefabs and scenes.",
  "$defs": {
    "color": {
      "type": "object",
      "required": [
        "r",
        "g",
        "b"
      ],
      "description": "Color in RGB format",
      "properties": {
        "r": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Red component"
        },
        "g": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Green component"
        },
        "b": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Blue component"
        }
      },
      "additionalProperties": false
    },
    "phong_material": {
      "type": "object",
      "description": "Phong material properties",
      "properties": {
        "ambientFactor": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "default": 0.5,
          "description": "Ambient light reflection factor"
        },
        "diffuseFactor": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "default": 0.5,
          "description": "Diffuse light reflection factor"
        },
        "specularFactor": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "default": 0.5,
          "description": "Specular light reflection factor"
        },
        "specularExponent": {
          "type": "number",
          "minimum": 0,
          "default": 50.0,
          "description": "Specular exponent (shininess)"
        }
      },
      "additionalProperties": false
    },
    "material": {
      "oneOf": [
        {
          "$ref": "#/$defs/phong_material"
        }
      ]
    },
    "material_component": {
      "type": "object",
      "required": [
        "id",
        "name",
        "material"
      ],
      "properties": {
        "id": {
          "type": "number",
          "description": "JSON file wide identifier of the material that may be referenced in nodes."
        },
        "name": {
          "type": "string"
        },
        "material": {
          "$ref": "#/$defs/phong_material"
        }
      },
      "additionalProperties": false
    },
    "transform": {
      "type": "object",
      "properties": {
        "matrix": {
          "type": "array",
          "items": {
            "type": "number"
          },
          "minItems": 16,
          "maxItems": 16,
          "description": "4x4 transformation matrix"
        }
      },
      "additionalProperties": false
    },
    "group": {
      "type": "object",
      "required": [
        "transform",
        "name"
      ],
      "properties": {
        "transform": {
          "$ref": "#/$defs/transform"
        },
        "name": {
          "type": "string"
        },
        "children": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/node"
          }
        }
      },
      "additionalProperties": false
    },
    "sphere": {
      "type": "object",
      "required": [
        "transform",
        "name",
        "radius"
      ],
      "properties": {
        "transform": {
          "$ref": "#/$defs/transform"
        },
        "name": {
          "type": "string"
        },
        "radius": {
          "type": "number",
          "minimum": 0
        }
      },
      "additionalProperties": false
    },
    "box": {
      "type": "object",
      "required": [
        "transform",
        "name",
        "size"
      ],
      "properties": {
        "transform": {
          "$ref": "#/$defs/transform"
        },
        "name": {
          "type": "string"
        },
        "size": {
          "type": "object",
          "required": [
            "x",
            "y",
            "z"
          ],
          "properties": {
            "x": {
              "type": "number",
              "minimum": 0
            },
            "y": {
              "type": "number",
              "minimum": 0
            },
            "z": {
              "type": "number",
              "minimum": 0
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "node": {
      "oneOf": [
        {
          "$ref": "#/$defs/group"
        },
        {
          "$ref": "#/$defs/sphere"
        },
        {
          "$ref": "#/$defs/box"
        }
      ]
    },
    "tree": {
      "type": "object",
      "required": [
        "root"
      ],
      "properties": {
        "root": {
          "$ref": "#/$defs/node"
        },
        "material_components": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/material_component"
          }
        }
      },
      "additionalProperties": false
    }
  }
}
