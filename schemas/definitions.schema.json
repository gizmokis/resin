{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/gizmokis/resin/refs/heads/master/schemas/definitions.schema.json",
  "title": "Definitions for Resin JSON schemas",
  "description": "Common definitions for Resin JSON schemas used by prefabs and scenes.",
  "$defs": {
    "color": {
      "type": "object",
      "required": [
        "r",
        "g",
        "b"
      ],
      "description": "Color in RGB format",
      "properties": {
        "r": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Red component"
        },
        "g": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Green component"
        },
        "b": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Blue component"
        }
      },
      "additionalProperties": false
    },
    "material": {
      "type": "object",
      "description": "Phong material properties",
      "required": [
        "id",
        "name",
        "albedo",
        "ambient",
        "diffuse",
        "specular",
        "specularExponent"
      ],
      "properties": {
        "id": {
          "type": "#/$defs/intId"
        },
        "name": {
          "type": "string"
        },
        "albedo": {
          "$ref": "#/$defs/color"
        },
        "ambient": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Ambient light reflection factor"
        },
        "diffuse": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Diffuse light reflection factor"
        },
        "specular": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Specular light reflection factor"
        },
        "specularExponent": {
          "type": "number",
          "minimum": 0,
          "description": "Specular exponent (shininess)"
        }
      },
      "additionalProperties": false
    },
    "transform": {
      "type": "object",
      "properties": {
        "position": {
          "type": "object",
          "required": [
            "x",
            "y",
            "z"
          ],
          "properties": {
            "x": {
              "type": "number"
            },
            "y": {
              "type": "number"
            },
            "z": {
              "type": "number"
            }
          },
          "additionalProperties": false
        },
        "rotation": {
          "type": "object",
          "required": [
            "x",
            "y",
            "z",
            "w"
          ],
          "properties": {
            "x": {
              "type": "number"
            },
            "y": {
              "type": "number"
            },
            "z": {
              "type": "number"
            },
            "w": {
              "type": "number"
            }
          },
          "additionalProperties": false
        },
        "scale": {
          "type": "number"
        }
      },
      "additionalProperties": false
    },
    "binaryOperation": {
      "type": "string",
      "enum": [
        "union",
        "smoothUnion",
        "diff",
        "smoothDiff",
        "inter",
        "smoothInter",
        "xor",
        "smoothXor"
      ]
    },
    "intId": {
      "type": "integer",
      "minimum": 0
    },
    "group": {
      "type": "object",
      "properties": {
        "children": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/node"
          }
        }
      },
      "additionalProperties": false
    },
    "sphere": {
      "type": "object",
      "required": [
        "radius"
      ],
      "properties": {
        "radius": {
          "type": "number",
          "minimum": 0
        }
      },
      "additionalProperties": false
    },
    "cube": {
      "type": "object",
      "required": [
        "size"
      ],
      "properties": {
        "size": {
          "type": "object",
          "required": [
            "x",
            "y",
            "z"
          ],
          "properties": {
            "x": {
              "type": "number",
              "minimum": 0
            },
            "y": {
              "type": "number",
              "minimum": 0
            },
            "z": {
              "type": "number",
              "minimum": 0
            }
          },
          "additionalProperties": false
        },
        "materialId": {
          "type": "number"
        }
      },
      "additionalProperties": false
    },
    "nodeCommon": {
      "type": "object",
      "required": [
        "operation",
        "name",
        "materialId",
        "transform"
      ],
      "properties": {
        "operation": {
          "$ref": "#/$defs/binaryOperation"
        },
        "name": {
          "type": "string"
        },
        "materialId": {
          "type": "#/$defs/intId"
        },
        "transform": {
          "$ref": "#/$defs/transform"
        }
      },
      "additionalProperties": false
    },
    "groupNode": {
      "allOf": [
        {
          "$ref": "#/$defs/nodeCommon"
        },
        {
          "type": "object",
          "required": [
            "group"
          ],
          "properties": {
            "group": {
              "$ref": "#/$defs/group"
            }
          }
        }
      ]
    },
    "sphereNode": {
      "allOf": [
        {
          "$ref": "#/$defs/nodeCommon"
        },
        {
          "type": "object",
          "required": [
            "sphere"
          ],
          "properties": {
            "sphere": {
              "$ref": "#/$defs/sphere"
            }
          }
        }
      ]
    },
    "cubeNode": {
      "allOf": [
        {
          "$ref": "#/$defs/nodeCommon"
        },
        {
          "type": "object",
          "required": [
            "cube"
          ],
          "properties": {
            "cube": {
              "$ref": "#/$defs/cube"
            }
          }
        }
      ]
    },
    "node": {
      "oneOf": [
        {
          "$ref": "#/$defs/groupNode"
        },
        {
          "$ref": "#/$defs/sphereNode"
        },
        {
          "$ref": "#/$defs/cubeNode"
        }
      ]
    }
  },
  "tree": {
    "type": "object",
    "required": [
      "rootGroup"
    ],
    "properties": {
      "rootGroup": {
        "$ref": "#/$defs/groupNode"
      },
      "materials": {
        "type": "array",
        "items": {
          "$ref": "#/$defs/material"
        }
      }
    },
    "additionalProperties": false
  }
}
