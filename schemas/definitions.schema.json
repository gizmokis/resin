{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/gizmokis/resin/refs/heads/master/schemas/definitions.schema.json",
  "title": "Definitions for Resin JSON schemas",
  "description": "Common definitions for Resin JSON schemas used by prefabs and scenes.",
  "$defs": {
    "intId": {
      "type": "integer",
      "minimum": 0
    },
    "binaryOperation": {
      "type": "string",
      "enum": [
        "union",
        "smoothUnion",
        "diff",
        "smoothDiff",
        "inter",
        "smoothInter",
        "xor",
        "smoothXor"
      ]
    },
    "factor": {
      "type": "number",
      "minimum": 0
    },
    "color": {
      "type": "object",
      "description": "Color in RGB format",
      "required": [
        "r",
        "g",
        "b"
      ],
      "additionalProperties": false,
      "properties": {
        "r": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Red component"
        },
        "g": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Green component"
        },
        "b": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Blue component"
        }
      }
    },
    "transform": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "position": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "x",
            "y",
            "z"
          ],
          "properties": {
            "x": {
              "type": "number"
            },
            "y": {
              "type": "number"
            },
            "z": {
              "type": "number"
            }
          }
        },
        "rotation": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "x",
            "y",
            "z",
            "w"
          ],
          "properties": {
            "x": {
              "type": "number"
            },
            "y": {
              "type": "number"
            },
            "z": {
              "type": "number"
            },
            "w": {
              "type": "number"
            }
          }
        },
        "scale": {
          "type": "number"
        }
      }
    },
    "sphere": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "radius"
      ],
      "properties": {
        "radius": {
          "type": "number",
          "minimum": 0
        }
      }
    },
    "cube": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "size"
      ],
      "properties": {
        "size": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "x",
            "y",
            "z"
          ],
          "properties": {
            "x": {
              "type": "number",
              "minimum": 0
            },
            "y": {
              "type": "number",
              "minimum": 0
            },
            "z": {
              "type": "number",
              "minimum": 0
            }
          }
        }
      }
    },
    "torus": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "majorRadius",
        "minorRadius"
      ],
      "properties": {
        "majorRadius": {
          "type": "number",
          "minimum": 0
        },
        "minorRadius": {
          "type": "number",
          "minimum": 0
        }
      }
    },
    "capsule": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "height",
        "radius"
      ],
      "properties": {
        "height": {
          "type": "number",
          "minimum": 0
        },
        "radius": {
          "type": "number",
          "minimum": 0
        }
      }
    },
    "link": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "length",
        "majorRadius",
        "minorRadius"
      ],
      "properties": {
        "length": {
          "type": "number",
          "minimum": 0
        },
        "majorRadius": {
          "type": "number",
          "minimum": 0
        },
        "minorRadius": {
          "type": "number",
          "minimum": 0
        }
      }
    },
    "ellipsoid": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "radii"
      ],
      "properties": {
        "radii": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "x",
            "y",
            "z"
          ],
          "properties": {
            "x": {
              "type": "number",
              "minimum": 0
            },
            "y": {
              "type": "number",
              "minimum": 0
            },
            "z": {
              "type": "number",
              "minimum": 0
            }
          }
        }
      }
    },
    "pyramid": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "height"
      ],
      "properties": {
        "height": {
          "type": "number",
          "minimum": 0
        }
      }
    },
    "cylinder": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "height",
        "radius"
      ],
      "properties": {
        "height": {
          "type": "number",
          "minimum": 0
        },
        "radius": {
          "type": "number",
          "minimum": 0
        }
      }
    },
    "triangularPrism": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "prismHeight",
        "baseHeight"
      ],
      "properties": {
        "prismHeight": {
          "type": "number",
          "minimum": 0
        },
        "baseHeight": {
          "type": "number",
          "minimum": 0
        }
      }
    },
    "nodeCommon": {
      "type": "object",
      "required": [
        "binaryOperation",
        "factor",
        "name",
        "transform"
      ],
      "properties": {
        "binaryOperation": {
          "$ref": "#/$defs/binaryOperation"
        },
        "factor": {
          "$ref": "#/$defs/factor"
        },
        "name": {
          "type": "string"
        },
        "materialId": {
          "$ref": "#/$defs/intId"
        },
        "transform": {
          "$ref": "#/$defs/transform"
        }
      }
    },
    "sphereNode": {
      "type": "object",
      "allOf": [
        {
          "$ref": "#/$defs/nodeCommon"
        },
        {
          "type": "object",
          "required": [
            "sphere"
          ],
          "properties": {
            "sphere": {
              "$ref": "#/$defs/sphere"
            }
          }
        }
      ]
    },
    "cubeNode": {
      "type": "object",
      "allOf": [
        {
          "$ref": "#/$defs/nodeCommon"
        },
        {
          "type": "object",
          "required": [
            "cube"
          ],
          "properties": {
            "cube": {
              "$ref": "#/$defs/cube"
            }
          }
        }
      ]
    },
    "torusNode": {
      "type": "object",
      "allOf": [
        {
          "$ref": "#/$defs/nodeCommon"
        },
        {
          "type": "object",
          "required": [
            "torus"
          ],
          "properties": {
            "torus": {
              "$ref": "#/$defs/torus"
            }
          }
        }
      ]
    },
    "capsuleNode": {
      "type": "object",
      "allOf": [
        {
          "$ref": "#/$defs/nodeCommon"
        },
        {
          "type": "object",
          "required": [
            "capsule"
          ],
          "properties": {
            "capsule": {
              "$ref": "#/$defs/capsule"
            }
          }
        }
      ]
    },
    "linkNode": {
      "type": "object",
      "allOf": [
        {
          "$ref": "#/$defs/nodeCommon"
        },
        {
          "type": "object",
          "required": [
            "link"
          ],
          "properties": {
            "link": {
              "$ref": "#/$defs/link"
            }
          }
        }
      ]
    },
    "ellipsoidNode": {
      "type": "object",
      "allOf": [
        {
          "$ref": "#/$defs/nodeCommon"
        },
        {
          "type": "object",
          "required": [
            "ellipsoid"
          ],
          "properties": {
            "ellipsoid": {
              "$ref": "#/$defs/ellipsoid"
            }
          }
        }
      ]
    },
    "pyramidNode": {
      "type": "object",
      "allOf": [
        {
          "$ref": "#/$defs/nodeCommon"
        },
        {
          "type": "object",
          "required": [
            "pyramid"
          ],
          "properties": {
            "pyramid": {
              "$ref": "#/$defs/pyramid"
            }
          }
        }
      ]
    },
    "cylinderNode": {
      "type": "object",
      "allOf": [
        {
          "$ref": "#/$defs/nodeCommon"
        },
        {
          "type": "object",
          "required": [
            "cylinder"
          ],
          "properties": {
            "cylinder": {
              "$ref": "#/$defs/cylinder"
            }
          }
        }
      ]
    },
    "triangularPrismNode": {
      "type": "object",
      "allOf": [
        {
          "$ref": "#/$defs/nodeCommon"
        },
        {
          "type": "object",
          "required": [
            "triangularPrism"
          ],
          "properties": {
            "triangularPrism": {
              "$ref": "#/$defs/triangularPrism"
            }
          }
        }
      ]
    },
    "group": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "children": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/node"
          }
        }
      }
    },
    "groupNode": {
      "type": "object",
      "allOf": [
        {
          "$ref": "#/$defs/nodeCommon"
        },
        {
          "type": "object",
          "required": [
            "group"
          ],
          "properties": {
            "group": {
              "$ref": "#/$defs/group"
            }
          }
        }
      ]
    },
    "node": {
      "oneOf": [
        {
          "$ref": "#/$defs/groupNode"
        },
        {
          "$ref": "#/$defs/sphereNode"
        },
        {
          "$ref": "#/$defs/cubeNode"
        },
        {
          "$ref": "#/$defs/torusNode"
        },
        {
          "$ref": "#/$defs/capsuleNode"
        },
        {
          "$ref": "#/$defs/linkNode"
        },
        {
          "$ref": "#/$defs/ellipsoidNode"
        },
        {
          "$ref": "#/$defs/pyramidNode"
        },
        {
          "$ref": "#/$defs/cylinderNode"
        },
        {
          "$ref": "#/$defs/triangularPrismNode"
        }
      ]
    },
    "material": {
      "type": "object",
      "description": "Phong material properties",
      "required": [
        "id",
        "name",
        "albedo",
        "ambient",
        "diffuse",
        "specular",
        "specularExponent"
      ],
      "additionalProperties": false,
      "properties": {
        "id": {
          "$ref": "#/$defs/intId"
        },
        "name": {
          "type": "string"
        },
        "albedo": {
          "$ref": "#/$defs/color"
        },
        "ambient": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Ambient light reflection factor"
        },
        "diffuse": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Diffuse light reflection factor"
        },
        "specular": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Specular light reflection factor"
        },
        "specularExponent": {
          "type": "number",
          "minimum": 0,
          "description": "Specular exponent (shininess)"
        }
      }
    },
    "tree": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "rootGroup"
      ],
      "properties": {
        "materials": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/material"
          }
        },
        "rootGroup": {
          "$ref": "#/$defs/groupNode"
        }
      }
    }
  }
}
