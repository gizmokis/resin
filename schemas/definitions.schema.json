{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/gizmokis/resin/schemas/definitions.schema.json",
  "title": "Definitions for Resin JSON schemas",
  "description": "Common definitions for Resin JSON schemas used by prefabs and scenes.",
  "$defs": {
    "color": {
      "type": "object",
      "required": [
        "r",
        "g",
        "b"
      ],
      "description": "Color in RGB format",
      "properties": {
        "r": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Red component"
        },
        "g": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Green component"
        },
        "b": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Blue component"
        }
      },
      "additionalProperties": false
    },
    "material": {
      "type": "object",
      "description": "Phong material properties",
      "required": [
        "id",
        "name",
        "albedo",
        "ambient",
        "diffuse",
        "specular",
        "specular_exponent"
      ],
      "properties": {
        "id": {
          "type": "number"
        },
        "name": {
          "type": "string"
        },
        "albedo": {
          "$ref": "#/$defs/color"
        },
        "ambient": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "default": 0.5,
          "description": "Ambient light reflection factor"
        },
        "diffuse": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "default": 0.5,
          "description": "Diffuse light reflection factor"
        },
        "specular": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "default": 0.5,
          "description": "Specular light reflection factor"
        },
        "specular_exponent": {
          "type": "number",
          "minimum": 0,
          "default": 50.0,
          "description": "Specular exponent (shininess)"
        }
      },
      "additionalProperties": false
    },
    "transform": {
      "type": "object",
      "properties": {
        "position": {
          "type": "object",
          "required": [
            "x",
            "y",
            "z"
          ],
          "properties": {
            "x": {
              "type": "number"
            },
            "y": {
              "type": "number"
            },
            "z": {
              "type": "number"
            }
          },
          "additionalProperties": false
        },
        "rotation": {
          "type": "object",
          "required": [
            "x",
            "y",
            "z",
            "w"
          ],
          "properties": {
            "x": {
              "type": "number"
            },
            "y": {
              "type": "number"
            },
            "z": {
              "type": "number"
            },
            "w": {
              "type": "number"
            }
          },
          "additionalProperties": false
        },
        "scale": {
          "type": "number"
        }
      },
      "additionalProperties": false
    },
    "group": {
      "type": "object",
      "required": [
        "transform",
        "name"
      ],
      "properties": {
        "transform": {
          "$ref": "#/$defs/transform"
        },
        "name": {
          "type": "string"
        },
        "children": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/node"
          }
        },
        "material_id": {
          "type": "number"
        }
      },
      "additionalProperties": false
    },
    "sphere": {
      "type": "object",
      "required": [
        "transform",
        "name",
        "radius"
      ],
      "properties": {
        "transform": {
          "$ref": "#/$defs/transform"
        },
        "name": {
          "type": "string"
        },
        "radius": {
          "type": "number",
          "minimum": 0
        },
        "material_id": {
          "type": "number"
        }
      },
      "additionalProperties": false
    },
    "cube": {
      "type": "object",
      "required": [
        "transform",
        "name",
        "size"
      ],
      "properties": {
        "transform": {
          "$ref": "#/$defs/transform"
        },
        "name": {
          "type": "string"
        },
        "size": {
          "type": "object",
          "required": [
            "x",
            "y",
            "z"
          ],
          "properties": {
            "x": {
              "type": "number",
              "minimum": 0
            },
            "y": {
              "type": "number",
              "minimum": 0
            },
            "z": {
              "type": "number",
              "minimum": 0
            }
          },
          "additionalProperties": false
        },
        "material_id": {
          "type": "number"
        }
      },
      "additionalProperties": false
    },
    "node": {
      "oneOf": [
        {
          "$ref": "#/$defs/group"
        },
        {
          "$ref": "#/$defs/sphere"
        },
        {
          "$ref": "#/$defs/cube"
        }
      ]
    },
    "tree": {
      "type": "object",
      "required": [
        "root"
      ],
      "properties": {
        "root": {
          "$ref": "#/$defs/node"
        },
        "materials": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/material"
          }
        }
      },
      "additionalProperties": false
    }
  }
}
